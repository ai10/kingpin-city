<template name="canvasGrid">
<div draggable="false" class="ui">
<p>ox:{{ originX }}&nbsp;oiy:{{ originY }} &nbsp; {{ displayCanvas }}</p> 
<p>alphaLeft: {{ alphaLeft }} &nbsp; alphaTop: {{ alphaTop }}</p>
<p>omegaLeft: {{ omegaLeft }} &nbsp; omegaTop: {{ omegaTop }}</p>
</div>
<div id="gridWindow" draggable="false" class="ui huge message page grid center aligned">
  <div id="gridContainer" style="overflow: hidden; height: 700px; width: 700px;">
      <div id="alphaContainer" class="alpha{{ displayCanvas }}" 
           style="position: relative; top: {{ alphaTop }}px; left: {{ alphaLeft }}px">
           
           <canvas id="alphaCanvas" width="{{ width }}" height="{{ height }}"></canvas>
       
       </div>
       <div id="omegaContainer" class="{{ displayCanvas }}omega" 
            style="position: relative; top: {{ omegaTop }}px; left: {{ omegaLeft }}px">
        
          <canvas id="omegaCanvas" width="{{ width }}" height="{{ height }}"></canvas>
       </div>
  </div>
</div>
</template>
